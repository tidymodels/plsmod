Package: plsmod
Title: Model Wrappers for Projection Methods
Version: 0.2.0.9000
Authors@R: c(
    person("Max", "Kuhn", , "max@rstudio.com", role = c("aut", "cre"),
           comment = c(ORCID = "0000-0003-2402-136X")),
    person("RStudio", role = c("cph", "fnd"))
